{
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "plugins": [
        "json"
    ], 
    "extends": "eslint:recommended",
    "rules": {
        "no-unused-vars":"off",
        "no-console": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}